---
import Favicons from '../components/Favicons.astro';
import Header from '../components/Header.astro';
import type { LINKS } from '../ts/pageLinks';

interface Props {
  title: keyof typeof LINKS;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="aktk1910.com" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="akatsuki1910" />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" href="/favicon.ico" />
    <style>
      @import 'https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap';
    </style>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <meta name="generator" content={Astro.generator} />
    <script src="../ts/layout.ts"></script>
    <Favicons />
    <title>{`akatsuki1910 - ${title}`}</title>
  </head>
  <body>
    <Header title={title} />
    <slot />
  </body>
</html>

<style lang="scss">
  html,
  body {
    min-height: 100vh;
    margin: 0;
    font-family: 'Noto Sans JP', sans-serif;
    color: white;
    background-color: black;
  }

  body {
    @include eye-over('data-loaded');

    position: relative;

    &::before,
    &::after {
      z-index: 1000;
      background-color: black;
    }
  }
</style>
