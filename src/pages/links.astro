---

<Layout title="akatsuki1910 - links">
  <main>
    <table class="table">
      <thead>
        <tr>
          <th>SNS</th>
          <th>LINK</th>
        </tr>
      </thead>
      <tbody>
        {
          LINKS.map((v) => (
            <tr>
              <td class="td">
                <Image
                  src={`http://www.google.com/s2/favicons?domain=${new URL(v.url).origin}`}
                  alt={new URL(v.url).hostname}
                  width={16}
                  height={16}
                />
              </td>
              <td class="td">
                <a
                  href={v.url}
                  translate="no"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {v.id}
                </a>
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </main>
</Layout>

<style lang="scss">
  .table {
    margin: 0 auto;
  }

  .td {
    text-align: center;
  }
</style>
