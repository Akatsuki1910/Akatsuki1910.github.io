---
import FaviconImage from './FaviconImage.astro';

interface Props {
  data: ReadonlyArray<{
    day?: `${number}-${number}-${number}`;
    title: string;
    description: string;
    urls: string[];
  }>;
}

const { data } = Astro.props;
---

<div class="grid" data-stagger>
  {
    data.map((v) => (
      <article class="card">
        {v.day && (
          <time class="card-date" datetime={v.day}>
            {v.day}
          </time>
        )}
        <h3 class="card-title">{v.title}</h3>
        <p class="card-desc">{v.description}</p>
        <ul class="card-links">
          {v.urls.sort().map((url) => (
            <li class="card-link-item">
              <FaviconImage url={url} />
            </li>
          ))}
        </ul>
      </article>
    ))
  }
</div>

<style lang="scss">
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 12px;
    width: 100%;
    max-width: 1200px;

    @include is-sp {
      grid-template-columns: 1fr;
    }
  }

  .card {
    position: relative;
    padding: 20px 20px 20px 24px;
    background: $color-surface;
    border: 1px solid $color-border;
    border-radius: 12px;
    transition:
      border-color $transition-duration ease,
      background $transition-duration ease,
      transform $transition-duration ease,
      box-shadow $transition-duration ease;

    &::before {
      position: absolute;
      top: 12px;
      bottom: 12px;
      left: 0;
      width: 2px;
      content: '';
      background: $color-accent;
      border-radius: 1px;
      opacity: 0;
      transition: opacity $transition-duration ease;
    }

    &:hover {
      background: #161616;
      border-color: $color-border-hover;
      transform: translateY(-2px);
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);

      &::before {
        opacity: 1;
      }
    }
  }

  .card-date {
    display: block;
    margin-bottom: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: $color-text-secondary;
    letter-spacing: 0.05em;
  }

  .card-title {
    margin: 0 0 8px;
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.5;
  }

  .card-desc {
    margin: 0 0 16px;
    font-size: 0.85rem;
    color: $color-text-secondary;
    line-height: 1.5;
  }

  .card-links {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0;
    margin: 0;
  }

  .card-link-item {
    list-style: none;
  }
</style>
