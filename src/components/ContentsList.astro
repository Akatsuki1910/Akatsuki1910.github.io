---
import FaviconImage from './FaviconImage.astro';

interface Props {
  data: ReadonlyArray<{
    day?: `${number}-${number}-${number}`;
    title: string;
    description: string;
    urls: string[];
  }>;
}

const { data } = Astro.props;
---

<div class="grid" data-stagger>
  {
    data.map((v) => (
      <article class="card">
        {v.day && (
          <time class="card-date" datetime={v.day}>
            {v.day}
          </time>
        )}
        <h3 class="card-title">{v.title}</h3>
        <p class="card-desc">{v.description}</p>
        <ul class="card-links">
          {v.urls.sort().map((url) => (
            <li class="card-link-item">
              <FaviconImage url={url} />
            </li>
          ))}
        </ul>
      </article>
    ))
  }
</div>

<style lang="scss">
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 12px;
    width: 100%;
    max-width: 1200px;

    @include is-sp {
      grid-template-columns: 1fr;
    }
  }

  .card {
    position: relative;
    padding: 20px;
    background: $color-surface;
    border: 1px solid $color-border;
    border-radius: 12px;
    transition:
      border-color 0.4s ease,
      background 0.4s ease;

    &:hover {
      background: #1a1a1a;
      border-color: $color-border-hover;
    }
  }

  .card-date {
    display: block;
    margin-bottom: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: $color-text-secondary;
  }

  .card-title {
    margin: 0 0 8px;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .card-desc {
    margin: 0 0 16px;
    font-size: 0.875rem;
    color: $color-text-secondary;
    line-height: 1.5;
  }

  .card-links {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0;
    margin: 0;
  }

  .card-link-item {
    list-style: none;
  }
</style>
