---
import { Image } from 'astro:assets';

interface Props {
  url: string;
  size?: number;
}

const { url, size = 24 } = Astro.props;

const urlObject = new URL(url);
---

<a
  href={url}
  translate="no"
  target="_blank"
  rel="noopener noreferrer"
  class="image"
>
  <Image
    src={`http://www.google.com/s2/favicons?sz=${48}&domain=${urlObject.origin}`}
    alt={urlObject.hostname}
    width={size}
    height={size}
    loading={'lazy'}
  />
  <span class="tooltip" id="tooltip" translate="no">
    {url}
  </span>
</a>

<style lang="scss" define:vars={{ size }}>
  .image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(#{var(--size)} * sqrt(2) * 1px + 4px);
    height: calc(#{var(--size)} * sqrt(2) * 1px + 4px);
    background-color: white;
    border-radius: 50%;
    transition-duration: 0.2s;
    transition-property: background-color;

    &::after {
      position: absolute;
      top: -5px;
      left: 50%;
      visibility: hidden;
      margin-left: -5px;
      content: '';
      border-color: white transparent transparent;
      border-style: solid;
      border-width: 5px;
      opacity: 0;
      transition: opacity 0.2s;
    }

    .tooltip {
      position: absolute;
      bottom: calc(100% + 5px);
      left: 50%;
      z-index: 1;
      visibility: hidden;
      max-width: 100vw;
      padding: 5px 8px;
      color: black;
      text-align: center;
      white-space: wrap;
      pointer-events: none;
      background-color: white;
      border-radius: 6px;
      opacity: 0;
      transform: translateX(-50%);
      transition: opacity 0.2s;
    }

    &:hover {
      background-color: #d9f70e;

      &::after {
        visibility: visible;
        opacity: 1;
      }

      .tooltip {
        visibility: visible;
        opacity: 1;
      }
    }
  }
</style>
