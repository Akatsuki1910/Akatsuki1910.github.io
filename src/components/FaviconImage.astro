---
import { Image } from 'astro:assets';

interface Props {
  url: string;
  size?: number;
}

const { url, size = 24 } = Astro.props;

const urlObject = new URL(url);
---

<a
  href={url}
  translate="no"
  target="_blank"
  rel="noopener noreferrer"
  class="favicon-link"
>
  <Image
    src={`http://www.google.com/s2/favicons?sz=${48}&domain=${urlObject.origin}`}
    alt={urlObject.hostname}
    width={size}
    height={size}
    loading={'lazy'}
  />
  <span class="tooltip" id="tooltip" translate="no">
    {url}
  </span>
</a>

<style lang="scss" define:vars={{ size }}>
  .favicon-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(#{var(--size)} * sqrt(2) * 1px + 6px);
    height: calc(#{var(--size)} * sqrt(2) * 1px + 6px);
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease;

    &::after {
      position: absolute;
      top: -5px;
      left: 50%;
      visibility: hidden;
      margin-left: -5px;
      content: '';
      border-color: $color-surface transparent transparent;
      border-style: solid;
      border-width: 5px;
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    .tooltip {
      position: absolute;
      bottom: calc(100% + 5px);
      left: 50%;
      z-index: 1;
      visibility: hidden;
      max-width: 100vw;
      padding: 6px 10px;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.7rem;
      color: $color-text;
      text-align: center;
      white-space: wrap;
      pointer-events: none;
      background-color: $color-surface;
      border: 1px solid $color-border;
      border-radius: 6px;
      opacity: 0;
      transform: translateX(-50%);
      transition: opacity 0.2s ease;
    }

    &:hover {
      background-color: rgba($color-accent, 0.2);
      box-shadow: 0 0 12px rgba($color-accent, 0.15);

      &::after {
        visibility: visible;
        opacity: 1;
      }

      .tooltip {
        visibility: visible;
        opacity: 1;
      }
    }
  }
</style>
