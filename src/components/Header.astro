---
import { LINKS } from '../ts/pageLinks';
---

<header class="header">
  <nav id="nav" class="nav">
    <ul class="nav-ul">
      {
        Object.entries(LINKS).map(([t, v]) => (
          <li class="nav-li">
            <a href={`#${t}`} aria-label={v.title}>
              <span class="material-symbols-outlined nav-li-icon">
                {v.text}
              </span>
              <span class="nav-li-label">{v.title}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style lang="scss">
  .header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: $header-height;
    backdrop-filter: blur(16px) saturate(180%);
    background-color: rgba(10, 10, 10, 0.7);
    border-bottom: 1px solid $color-border;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;

    &-ul {
      display: flex;
      gap: 32px;
      padding: 0;
      margin: 0;

      @include is-sp {
        gap: 16px;
      }
    }
  }

  .nav-li {
    padding: 0;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    list-style: none;

    @include is-sp {
      font-size: 0.7rem;
    }

    & > a {
      position: relative;
      display: flex;
      gap: 6px;
      align-items: center;
      padding: 8px 4px;
      color: $color-text-secondary;
      transition: color $transition-duration ease;

      &::after {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        content: '';
        background: linear-gradient(90deg, $color-accent, $color-accent-hover);
        transform: scaleX(0);
        transform-origin: right;
        transition: transform $transition-duration ease;
      }

      &:hover {
        color: $color-text;

        &::after {
          transform: scaleX(1);
          transform-origin: left;
        }
      }
    }
  }

  .nav-li-icon {
    font-size: 18px;

    @include is-sp {
      font-size: 16px;
    }
  }
</style>
