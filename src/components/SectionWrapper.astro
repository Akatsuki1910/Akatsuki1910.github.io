---
import { LINKS } from '../ts/pageLinks';

interface Props {
  id: keyof typeof LINKS;
  isFilled?: boolean;
}

const { id, isFilled } = Astro.props;
const title = LINKS[id].title;
---

<section class="section" id={id} data-is-filled={isFilled}>
  {
    () => {
      if (title !== 'HOME') {
        return (
          <h2 class="section-title" data-animate>
            <span class="section-title-text">{title}</span>
            <span class="section-title-line" />
          </h2>
        );
      }
    }
  }
  <slot />
</section>

<style lang="scss">
  .section {
    padding-top: $header-height;
    padding-right: 24px;
    padding-left: 24px;

    &[data-is-filled='true'] {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100lvh;
    }
  }

  .section-title {
    display: flex;
    gap: 16px;
    align-items: center;
    justify-content: center;
    margin: 48px 0 32px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    color: $color-text-secondary;
    text-transform: uppercase;

    @include is-sp {
      margin: 32px 0 24px;
    }
  }

  .section-title-text {
    white-space: nowrap;
  }

  .section-title-line {
    display: block;
    width: 40px;
    height: 1px;
    background-color: $color-accent;
  }
</style>
